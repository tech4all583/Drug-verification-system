<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drug_verification">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xlarge">

            <ImageView
                android:layout_width="120dp"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:layout_gravity="center"
                android:src="@drawable/icon"
                android:layout_height="120dp"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Project Topic"
                style="@style/TextAppearance.AppCompat.Body2"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="@dimen/spacing_medium"
                android:textSize="@dimen/spacing_mlarge"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text="Design and implementation of an android \nbased drug verification \n  \n(A case study of NAFDAC)"
                android:textSize="@dimen/spacing_large"
                android:padding="@dimen/spacing_medium"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/spacing_xlarge"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nafdac Registration Number"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textSize="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="@color/black"
                android:gravity="center_horizontal" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:hint="Nafdac Registration Number"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nafdac_number"
                    android:textSize="14dp"
                    android:padding="@dimen/spacing_large"
                    android:tooltipText="Enter your parent id"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch Number"
                android:layout_marginTop="@dimen/spacing_large"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textSize="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="@color/black"
                android:gravity="center_horizontal" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:hint="Batch Number"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/batch_number"
                    android:textSize="14dp"
                    android:padding="@dimen/spacing_large"
                    android:tooltipText="Enter your parent id"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="Verify"
                android:padding="@dimen/spacing_large"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:text="Report Drug"
                android:layout_marginTop="@dimen/spacing_large"
                android:textColor="@color/white"
                android:background="@color/red_500"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>